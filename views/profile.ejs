<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="/style.css">

  <script type="text/javascript" src="/script.js"></script>
</head>
<body>
  <h2>Hot Albums</h2>
  <hr>
  <h3 class="header">Profile</h3>
  <hr>
  <div class="nav">
    <h3 class="left-element">Vinyl</h3>
    <a class="link2" href="/">Home</a>
    <a class="link1" href="/profile">Profile</a>
  </div>
  <hr>
  <div class="profile-pic">250 X 250</div>
  <div class="reviews">
    <% if(user){ %>
      <h2>Name: <%= user[0].name %></h2>
      <h3>Email: <%= user[0].email %></h3>
      <h3>Join-Date: <%= user[0].date_added %></h3>
    <% }else{ %>
      <h2>Name: <%= result.name %></h2>
      <h3>Email: <%= result.email %></h3>
      <h3>Join-Date: <%= result.date_added %></h3>
    <% } %>
  </div>
  <hr>
  <div class="reviews">
    <% reviews.forEach(function(review){ %>
      <div class="user-review-divider">
        <h4><%= review.title %></h4> --->
        <p><%= review.message %></p>
        <form action="/delete-message/<%= review.id %>" method="delete">
          <input class="review-delete" type="image" src="http://findicons.com/files/icons/1580/devine_icons_part_2/128/trash_recyclebin_empty_closed.png" onclick="return confirm('are you sure?')">
        </form>
      </div>
    <% }) %>
  </div>

</body>
</html>
