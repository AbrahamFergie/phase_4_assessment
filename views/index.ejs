<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="/style.css">

  <script type="text/javascript" src="/script.js"></script>
</head>
<body>

  <h2>Hot Albums</h2>
  <hr>
  <h3 class="header">Home Page</h3>
  <hr>

  <% if(name) { %>
    <div class="nav">
      <h3 class="left-element">Vinyl</h3>
      <a class="link2" href="/profile" >Profile<a>&nbsp
      <a class="link1" href="/logout" >Logout<a>
    </div>
  <% } else{ %>
    <div class="nav">
      <h2 class="left-element">Vinyl</h2>
      <a class="link2" href="/login" >Sign-In<a>&nbsp
      <a class="link1" href="/signup" >Sign-Up<a>
    </div>
  <% } %>
  <hr>
  <img class="home-page-image" src="https://ichef.bbci.co.uk/images/ic/640xn/p04l2y11.jpg"></img>
  <div class="album-view">
    <h3>Records</h3>

    <div class="album-list">
      <% albums.forEach(function(album) { %>
        <div>
          <h5><a href="/albums/<%= album.id %>"><%= album.title %></a></h5>
          <span><%= album.artist %></span>
        </div>
      <% }) %>

      <div class="review-list">
        <% messages.forEach(function(review) { %>
          <span><strong>review:&nbsp</strong><%= review.message %>&nbsp <strong>username:&nbsp<%= review.name %></strong></span>
          <% }) %>
        </div>
    </div>
  </div>

</body>
</html>
